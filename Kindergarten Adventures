int solve(vector<int> v) {
    int n=v.size();
    int a[100007]={0};
    for(int i=0;i<n;i++){
        if(v[i]!=0 && v[i]!=n){
            a[i+1]+=1;
            a[(i-v[i]+1+n)%n]-=1;
        }
    }
    long long max_sum=INT_MIN,s=0,max_index=1;
    for(int i=0;i<n;i++){
        s+=a[i];
        if(s>max_sum){
            max_sum=s;
            max_index=i+1;
        }
    }
    return max_index;

}
